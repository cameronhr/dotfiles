# vim:ft=sh

check_if_vim() {
	if [ "$VIM" != "" ]; then echo "[vim:sh]"; fi
}

PS1="\[\033[01;34m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[31m\]\$(vcprompt)\$(check_if_vim)\[\033[00m\]\n# "

export PATH=/usr/local/bin:/usr/local/sbin:$PATH
export PATH=$PATH:~/workspace/bin
export PATH=$PATH:~/bin

# Node stuff
export PATH=$PATH:/usr/local/share/npm/bin
export NODE_PATH=/usr/local/lib/node:$NODE_PATH

# Amazon Web Crap
export JAVA_HOME=/System/Library/Java/JavaVirtualMachines/1.6.0.jdk/Contents/Home
export AWS_RDS_HOME=~/bin/RDSCli
export AWS_CREDENTIAL_FILE=~/.awskeys
export PATH=$PATH:${AWS_RDS_HOME}/bin

export HISTSIZE=2000000
export HISTCONTROL=ignoreboth

export EDITOR=vim

# ipython needs these two
export PAGER=less
export less=-r

alias g=git
alias gc='git commit'
alias py=python
alias n=ncmpcpp
alias nt='ncmpcpp toggle'
alias tmux='tmux -2'
alias mkv='mkvirtualenv --no-site-packages --distribute'
alias ctor='scp ~/Downloads/*.torrent cleveland:~/Torrents/watch && rm ~/Downloads/*.torrent'

unamestr=$(uname)
if [[ $unamestr == 'Linux' ]]; then
##
    alias ls='ls --color=auto'
##
elif [[ $unamestr == 'Darwin' ]]; then
    alias ls='ls -G'
    # Bash completion
    if [ -f /usr/local/etc/bash_completion ]; then
        . /usr/local/etc/bash_completion
    fi
    # Homebrew bash completion
    source `brew --prefix`/Library/Contributions/brew_bash_completion.sh
    # Autojump
    if [ -f `brew --prefix`/etc/autojump ]; then
        . `brew --prefix`/etc/autojump
    fi
fi

# Virtualenvwrapper
export VIRTUALENVWRAPPER_PYTHON=/usr/bin/python
export WORKON_HOME=~/Envs
if [ -f /usr/local/bin/virtualenvwrapper.sh ]; then
    . /usr/local/bin/virtualenvwrapper.sh
fi

# Don't write .pyc files
export PYTHONDONTWRITEBYTECODE=1
