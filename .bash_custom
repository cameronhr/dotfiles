# vim:ft=sh

BLUE="\[\033[01;34m\]"
WHITE="\[\033[01;00m\]"
MAGENTA="\[\033[01;35m\]"
PINK="\[\033[01;31m\]"
GREEN="\[\033[01;32m\]"

PS1=""
# Blue: User
PS1=$PS1"$BLUE\u"
# White: @
PS1=$PS1"$WHITE@"
# Blue: Hostname
PS1=$PS1"$GREEN\h"
PS1=$PS1"$WHITE:"
PS1=$PS1"$MAGENTA\w " #pwd
PS1=$PS1"$PINK\$(vcprompt)"
# White: newline, prompt
PS1=$PS1"$WHITE\n# "


export PATH=/usr/local/bin:/usr/local/sbin:$PATH
export PATH=$PATH:~/workspace/bin
export PATH=$PATH:~/bin

export HISTSIZE=2000000
# Ignore duplicates and commands with leading whitespace
export HISTCONTROL=ignoreboth

export VCPROMPT_FORMAT='%s:%b%m%u'

export EDITOR=vim

# ipython needs these two
export PAGER=less
export less=-r
# Don't write .pyc files
export PYTHONDONTWRITEBYTECODE=1


# Aliases
alias g=git
alias py=python
alias d=django-admin.py

alias n=ncmpcpp
alias nn='ncmpcpp next'
alias np='ncmpcpp prev'
alias nr='ncmpcpp next && ncmpcpp prev' # Replay
alias nt='ncmpcpp toggle'
alias nnp='ncmpcpp --now-playing'

# For checking epub integrity
alias epubcheck='java -jar ~/bin/epubcheck/epubcheck-3.0b5.jar'

# Tmux normally tries to run without 256 color mode.
alias tmux='tmux -2'

alias mkv='mkvirtualenv  --no-site-packages --distribute'
alias ctor='scp ~/Downloads/*.torrent cleveland:~/torrents/watch && rm ~/Downloads/*.torrent'

# Pipe to this to pretty-print json
alias ppj='python -mjson.tool'

# Platform dependant stuff
unamestr=$(uname)

if [[ $unamestr == 'Linux' ]]; then
##
    alias ls='ls --color=auto'
##
elif [[ $unamestr == 'Darwin' ]]; then
    alias ls='ls -G'
    # Bash completion
    if [ -f /usr/local/etc/bash_completion ]; then
        . /usr/local/etc/bash_completion
    fi
    # Homebrew bash completion
    source `brew --prefix`/Library/Contributions/brew_bash_completion.sh
    # Autojump
    if [ -f `brew --prefix`/etc/autojump ]; then
        . `brew --prefix`/etc/autojump
    fi
fi


# Virtualenvwrapper
export VIRTUALENVWRAPPER_PYTHON=/usr/bin/python
export WORKON_HOME=~/.virtualenvs
if [ -f /usr/local/bin/virtualenvwrapper.sh ]; then
    . /usr/local/bin/virtualenvwrapper.sh
fi

