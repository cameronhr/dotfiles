# vim:ft=sh
# Aliases for all platforms

alias vim=nvim

alias n=ncmpcpp
alias nn='ncmpcpp next'
alias np='ncmpcpp prev'
alias nr='ncmpcpp next && ncmpcpp prev' # Replay
alias nt='ncmpcpp toggle'
alias nnp='ncmpcpp --now-playing'

# ncmpcpp on chevalier
alias cn='ncmpcpp -h chevalier'
alias cnn='ncmpcpp -h chevalier next'
alias cnp='ncmpcpp -h chevalier prev'
alias cnr='ncmpcpp -h chevalier next && ncmpcpp prev' # Replay
alias cnt='ncmpcpp -h chevalier toggle'
alias cnnp='ncmpcpp -h chevalier --now-playing'

# For checking epub integrity
alias epubcheck='java -jar ~/bin/epubcheck/epubcheck-3.0b5.jar'

if [ -d ~/media/torrents/watch ]; then
    alias ctor='mv ~/Downloads/*.torrent ~/media/torrents/watch'
else
    alias ctor='scp ~/Downloads/*.torrent derp.home:~/media/torrents/watch && rm ~/Downloads/*.torrent'
fi

# Pipe to this to pretty-print json
alias ppj='python -m json.tool'

# Creds stuff
alias credd='openssl aes-256-cbc -d -a -in creds -out creds.txt'
alias crede='openssl aes-256-cbc -a -salt -in creds.txt -out creds'

alias pss='openssl aes-256-cbc -d -a -in $(if [ -f creds ]; then echo creds; else echo ~/me/creds; fi) | grep -i -A 6 $1'

# Concat all ssh configs into one master config
alias sshconfig='> ~/.ssh/config && for f in ~/.ssh/configs/*; do echo "# generated from $f" >> ~/.ssh/config && grep -hv ^# $f >> ~/.ssh/config; done'
alias sshemallletgodsortemout="awsssh > ~/.ssh/configs/awsssh && sshconfig"

# Docker stuff
# Quickly get the last id of a docker container
alias dl="docker ps -l -q"
# Remove all stopped containers
alias drm='docker rm $(docker ps -a -q)'

alias lower="tr '[:upper:]' '[:lower:]'"

# Workspace aliases

alias cleanbranches="git branch --merged | grep -v '^\*' | xargs git branch -d"
function squash() {
    git rebase --interactive $(git merge-base master $(git branch | grep \* | cut -d ' ' -f 2))
}

function c() {
    python -m 'calculate' $1
}

function t() {
    case $1 in
        "beatport" )
            tmux new-session -s beatport -c ~/workspace/beatport-api-x || tmux attach -t beatport
            ;;
        "lisa" )
            tmux new-session -s lisa -c ~/workspace/lisa || tmux attach -t lisa
            ;;
        *)
            tmux new-session -s $1 || tmux attach -t $1
            ;;
    esac
}
