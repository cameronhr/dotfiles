# vim:set ft=sh:

export TERM='xterm-256color'

[[ -d "$HOME/.virtualenvs/default" ]] && export PATH="~/.virtualenvs/default/bin:$PATH"

if [ -f ~/.aliases_linux ]; then
    . ~/.aliases_linux
fi

export VCPROMPT_FORMAT="%b%u%m"

if ! pgrep -u "$USER" ssh-agent > /dev/null; then
    ssh-agent > ~/.ssh-agent-process
fi
if [[ "$SSH_AGENT_PID" == "" ]]; then
    eval "$(<~/.ssh-agent-process)"
fi
